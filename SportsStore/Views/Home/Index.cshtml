@{
    ViewData["Title"] = "Home Page";
}

<!--model expression specifies that the view expects to recieve a sequence of Product objects from the
    action method as its model data-->
@model IQueryable<Product>

<div class="text-center">
    <h1 class="display-4">Welcome to SportsStore</h1>
    
    @foreach (var p in Model)
    { 
        <div>
            <h3>@p.Name</h3>
            @p.Description
            <h4>@p.Price.ToString("c")</h4> <!--ToString("c") renders numerical values as currency-->
        </div>
    }
</div>
