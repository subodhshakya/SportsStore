@model Product

<div class="card card-outline-primary m-1 p-1 text-left">
    <div class="bg-faded p-1">
        <h3>
            @Model.Name
            <span class="badge badge-pill badge-primary" style="float:right">
                <small>@Model.Price.ToString("c")<!--ToString("c") renders numerical values as currency--></small>
            </span>
        </h3>
    </div>
    <div class="card-text p-1">@Model.Description</div>
</div>
